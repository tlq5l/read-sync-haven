{
	"manifest_version": 3,
	"name": "Bondwise Saver",
	"version": "0.1.0",
	"description": "Save articles, videos, and posts for later reading.",
	"permissions": ["activeTab", "scripting", "storage"],
	"action": {
		"default_popup": "popup/popup.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"background": {
		"service_worker": "dist/background.js",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["dist/content.js"]
		}
	]
}
